<!DOCTYPE html>
<html lang="zh">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title - 教育系统党风廉政建设责任制考核平台</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">教育系统党风廉政建设责任制考核平台</p>
            </div>
        </div>
    </header>
    <div id="body">
        <div class="featured">
            <div class="content-wrapper">
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("首页", "Index", "Home")</li>
                        <li>@Html.ActionLink("考评中心", "Index", "Grade")</li>
                        <li>@Html.ActionLink("预警中心", "Index", "Home")</li>
                        <li>@Html.ActionLink("指标填报", "Index", "Quota")</li>
                        <li>@Html.ActionLink("修改密码", "ChangePwd", "Account")</li>
                        <li>@Html.ActionLink("退出登录", "LogOff", "Account")</li>
                    </ul>
                </nav>
            </div>
        </div>
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>
    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>主办单位：张家港市教育局      &copy; @DateTime.Now.Year - 张家港谷嘉电子科技有限公司</p>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
