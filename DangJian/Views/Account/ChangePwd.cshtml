@{
    ViewBag.Title = "修改密码";
}

<p class="message-success">@ViewBag.StatusMessage</p>

<section id="loginForm">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>修改密码</legend>
            <ol>
                <li>
                    <label for="OldPwd">旧密码</label>
                    <input data-val="true" data-val-required="请输入旧密码。" id="OldPwd" name="OldPwd" type="text" value="" />
                    <span class="field-validation-valid" data-valmsg-for="OldPwd" data-valmsg-replace="true"></span>
                </li>
                <li>
                    <label for="Password">新密码</label>
                    <input data-val="true" data-val-required="请输入新密码。" id="Password" name="Password" type="password" />
                    <span class="field-validation-valid" data-valmsg-for="Password" data-valmsg-replace="true"></span>
                </li>
                <li>
                    <label for="CFPassword">确认密码</label>
                    <input data-val="true" data-val-required="请输入新密码。" id="CFPassword" name="CFPassword" type="password" />
                    <span class="field-validation-valid" data-valmsg-for="CFPassword" data-valmsg-replace="true"></span>
                </li>
            </ol>
            <input type="submit" value="修改密码" />
        </fieldset>
    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
